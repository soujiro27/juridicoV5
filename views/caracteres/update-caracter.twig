<div class="row">
  <div id="tableLarge" class="col-md-9 col-md-offset-2">
    <div class="widget">
      <div class="widget-head">
        <div id="headerText" class="pull-left">Lista de Registros
          <div class="order"></div>
          <div class="selectColumns"></div>
        </div>
        <div class="widget-icons pull-right"><a id="addRegister" href="./Caracteres/add" class="btn btn-info">Añadir Registro</a></div>
        <div class="clearfix"></div>
      </div>
      <div id="main-content" class="widget-content">





        <form id="Caracteres" method="POST" action="./update">
          <div class="form-group siglas">
            <label class="form-control-label" for="siglas">Siglas</label>
            <input class="form-control" id="siglas" type="text" placeholder="siglas" required="" pattern="[A-Za-z]{1-5}" name="siglas" title="Inserta una Sigla" value="{{ caracter.siglas }}" />
          </div>
          <div class="form-group nombre">
            <label class="form-control-label" for="nombre">Nombre</label>
            <input class="form-control" id="nombre" type="text" placeholder="Nombre" required="" pattern="[A-Za-z]{1-20}" name="nombre" title="Nombre Incorrecto o Caracteres maximos"/ value="{{ caracter.nombre }}">
            <input type="hidden" name="idCaracter" value="{{ caracter.idCaracter }}">
          </div>
          <div class="form-group estatus">
            <label class="form-control-label" for="estatus">Estatus</label>

            <select name="estatus" id="estatus">
                {% if caracter.estatus=='ACTIVO' %}
                    <option value="ACTIVO" selected>ACTIVO</option>
                    <option value="INACTIVO" >INACTIVO</option>
                {% else %}
                    <option value="ACTIVO" >ACTIVO</option>
                    <option value="INACTIVO" selected>INACTIVO</option>
                {% endif %}
            </select>
          </div>

          <div class="form-group send">
            <input class="btn btn-info" type="submit" value="Guardar"/>
            <button class="btn btn-danger" id="cancelar">Cancelar</button>
          </div>
        </form>
          {% if error %}
            <div class="alert alert-danger">No puede Haber Registros Duplicados</div>
          {% endif %}
	  </div>
    </div>
  </div>
</div>



</body>
