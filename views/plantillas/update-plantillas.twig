<div class="row">
    <div id="tableLarge" class="col-md-9 col-md-offset-2">
        <div class="widget">
            <div class="widget-head">
                <div id="headerText" class="pull-left">Lista de Registros
                    <div class="order"></div>
                    <div class="selectColumns"></div>
                </div>
                <div class="widget-icons pull-right"><a id="addRegister" href="./Caracteres/add" class="btn btn-info">Añadir Registro</a></div>
                <div class="clearfix"></div>
            </div>
            <div id="main-content" class="widget-content">

        <form class="form-inline" method="post" action="./../update">
            <div class="form-group numFolio">
                <label for="numFolio">Numero de Folio</label>
                <input type="text" name="numFolio" placeholder="Numero de Folio" id="numFolio" value="{{ plantillas[0].numFolio }}" />
            </div>
            <div class="form-group asunto">
                <label for="asunto">Asunto</label>
                <input type="text" name="asunto" placeholder="Asunto" id="asunto" value="{{ plantillas[0].asunto }}">
            </div>
            <div class="form-group fOficio">
                <label for="fOficio">Fecha Documento</label>
                <input type="text" name="fOficio" placeholder="Fecha Oficio" id="fOficio" value="{{ plantillas[0].fOficio }}">
            </div>
            <div class="form-group siglas">
                <label for="siglas">Siglas</label>
                <input type="text" name="siglas" placeholder="siglas" id="siglas" value="{{ plantillas[0].siglas }}">
            </div>
            <div class="form-group texto">
                <label for="numFolio">Texto</label>
                <textarea name="texto" id="texto" placeholder="Texto">{{ plantillas[0].texto }}</textarea>
                <input type="hidden" name="idRemitente" value="1">
                <input type="hidden" name="idPlantillaJuridico" value="{{ plantillas[0].idPlantillaJuridico }}">
                <input type="hidden" name="copias" value="1,3">
            </div>
            <div class="form-group send">
                <input class="btn btn-primary btn-sm" type="submit" value="Guardar"/>
                <button class="btn btn-danger btn-sm" id="cancelar">Cancelar</button>
            </div>
        </form>









            </div>
        </div>
    </div>
</div>



